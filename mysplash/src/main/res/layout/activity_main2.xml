<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash.main.MainActivity2"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/fl_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fl_bottom"
        >
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fl_Buttom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:contentDescription="TODO">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_bottom"
        android:layout_alignParentBottom="true"
        android:background="@color/color_black_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
    <LinearLayout
        android:id="@+id/rg_main_tab"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/rl_button_shanghai"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:lottie_fileName="lottie/shanghai.json"
        android:layout_weight="1"
        />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/rl_button_hangzhou"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:lottie_fileName="lottie/hangzhou.json"
            android:layout_weight="1"
            />
